# LangGraph Tutorial Environment Configuration

# ==== 自定义 LLM 配置 ====
# 主要使用的LLM提供商 (openai|anthropic|azure|custom)
DEFAULT_LLM_PROVIDER=custom

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_TEMPERATURE=0.1
ANTHROPIC_MAX_TOKENS=4000

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_DEPLOYMENT_NAME=your_deployment_name
AZURE_MODEL=gpt-4o-mini

# 自定义 LLM 配置 (支持任何兼容OpenAI格式的API)
CUSTOM_LLM_API_KEY=your_custom_api_key_here
CUSTOM_LLM_BASE_URL=https://your-custom-llm-endpoint.com/v1
CUSTOM_LLM_MODEL=your_custom_model_name
CUSTOM_LLM_TEMPERATURE=0.1
CUSTOM_LLM_MAX_TOKENS=4000


# ===== 记忆系统配置 =====
# 存储类型: sqlite, postgres, memory
MEMORY_STORAGE_TYPE=sqlite

# SQLite 数据库路径 (用于记忆系统)
MEMORY_DB_PATH=./data/memory.db

# PostgreSQL 连接URL (当使用postgres存储时)
POSTGRES_URL=postgresql://username:password@localhost:5432/langgraph_memory

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 工作流配置
MAX_ITERATIONS=10
DEFAULT_TIMEOUT=300
ENABLE_HUMAN_FEEDBACK=true

# 调试和开发配置
DEBUG_MODE=false
SHOW_GRAPH_VISUALIZATION=true
SAVE_INTERMEDIATE_STATES=true 